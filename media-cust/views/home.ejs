<html ang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <title>Media App</title>

        <!-- jQuery needs to be placed before bootstrap -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

        <!-- Bootstrap Start -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <!-- Bootstrap End -->
    
        <link rel="stylesheet" href="slideshow.css">

        <script src="/socket.io/socket.io.js"></script>
        <script src="chatclient.js"></script>

    </head>
    <body>
    <div class="container">

    <!-- Nav bar Start-->
    <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top">
    <a class="navbar-brand" href="#">MediaApp</a>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" href="/">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/sports">Sports</a>
          </li>
        <li class="nav-item">
          <a class="nav-link" href="/about_us">About Us</a>
        </li>
        <li class="nav-item">
                <a class="nav-link" href="/contact_us">Contact Us</a>
        </li>
      </ul>
    </div> 
    </nav>
    <br><br><br>
    <!-- Nav bar End-->
    <h6 style="color: white; text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px darkblue;"> 
        City : <%= weather.city %>,  Temperature : <%= weather.temperature %> ( <%= weather.temp_min %> - <%= weather.temp_max %> ),
        Weather : <%= weather.description %> <img src=<%= weather.icon %> />
    </h6>
    <div class="row">
        <!-- col-6 -->
        <div class="col-md-6"> 
        <div class="panel">
        <div class="panel-body">    
            <!-- Slideshow Start -->
            <div class="slideshow-container" >

                <!-- Full-width images with number and caption text -->
                <div class="mySlides fade">
                <div class="numbertext">1 / 3</div>
                <a href=<%= news[0].url %> target="_blank" > 
                    <img src=<%= news[0].urlToImage %> style="width:100%">
                </a>

                <div class="text" style="color: white; text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px darkblue;" > 
                    <font size="5"> <%= news[0].title %>  </font>
                </div>
                </div>
            
                <div class="mySlides fade">
                <div class="numbertext">2 / 3</div>
                <a href=<%= news[1].url %> target="_blank" > 
                    <img src=<%= news[1].urlToImage %> style="width:100%">
                </a>
                <div class="text" style="color: white; text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px darkblue;"> 
                    <font size="5"> <%= news[1].title %>  </font>
                </div>
                </div>
            
                <div class="mySlides fade">
                <div class="numbertext">3 / 3</div>
                <a href=<%= news[2].url %> target="_blank" > 
                    <img src=<%= news[2].urlToImage %> style="width:100%">
                </a>
                <div class="text" style="color: white; text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px darkblue;"> 
                    <font size="5"> <%= news[2].title %>  </font>
                </div>
                </div>
            
                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
            <br>
            
            <!-- The dots/circles -->
            <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span> 
            <span class="dot" onclick="currentSlide(2)"></span> 
            <span class="dot" onclick="currentSlide(3)"></span> 
            </div>
            <!-- Slideshow End -->
        </div>
        </div>         
        </div>
        <!-- col-6 -->
        <!--/col-4-->
        <div class="col-md-4"> 
                <div class="panel">
                <div class="panel-body">
                    <center>
                        <h5></h5>
                        <h6 style="color: white; text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px darkblue;">
                            Group Chat
                        </h6>
                    </center>
                     <div class="panel panel-info">
                        <div class="panel-body">
                            <form >
                                <div class="form-group" style="box-shadow: 10px 10px 5px darkkhaki;">
                                    <p>
                                        <input id="nickText" type="text" style="padding: 5px; border: 1px solid peru;" />
                                        <button id="nick" style="padding: 5px; background-color: powderblue">Set Nickname</button>
                                    </p>
                                    <textarea style="font-size: 12px; height:300px; width:100%; border: 1px solid purple;"></textarea>
                                    <hr />
                                    <p>
                                        <input id="chatText" type="text" style="padding: 5px; width:100%;border: 2px solid green;" />
                                        <button id="chat" style="padding: 5px; color: yellow; background-color: black">Send Chat Message</button>
                                    </p>
                                    
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                </div>                              
                </div>
                <!--/col-4-->
                <!--/col-2-->
                <div class="col-md-2"> 
                <div class="panel">
                <div class="panel-body">
                    
                    <form >
                        <div class="form-group" style="box-shadow: 10px 10px 5px darkkhaki;">
                            <h5></h5>
                            <h6 style="color: white; text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px darkblue;">
                                active users: <b id="listu"></b>
                            </h6>
                            <p id="activeuser" style="height:400px;width:100%;border: 1px solid blue;">  
                                
                            </p>
                        </div>
                    </form>
                    
                </div>
                </div>                              
                </div>
                <!--/col-2-->


    </div>
    </div>
    
    <%- include ./partial/footer.ejs %>
    
    <script src="autoslideshow.js"></script>
    </body>
</html>